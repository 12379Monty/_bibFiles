	author = {Taylor, Paul B. and Stewart, Frances P. and Dunnington, Damien J. and Quinn, Sean T. and Schulz, Christina K. and Vaidya, Kalindi S. and Kurali, Edit and Lane, Tonia R. and Xiong, Wenfang C. and Sherrill, Timothy P. and Snider, John S. and Terpstra, Nathan D. and Hertzberg, Robert P.},
